<%= render 'header' %>
<div class="id-main-box">
  <div class="id-inline">
    <div class="we-index">
    <div class="id-ti">放映中アニメ</div>
    <div class="id-pd">
      <% doc = Nokogiri.HTML(open("http://tvanimedouga.blog93.fc2.com/")) %>
      <% doc.css('#menu1Block > div:nth-child(4) > div.menu1BlockBody > div > div > ul > li > a').each do |element| %>
      
        <% ani = element.inner_html %>
        
        <% @content = Content.find_by(title: ani) %>

          <% if !@content.blank? %>
          <% if ani == @content.title %>
            <%= link_to "#{ani}",  @content %><br>
          <% end %>
          <% end %>
        
      <% end %>
    </div>

    </div>
  </div>

  <div class="id-inline">
    <div class="timeline">
      <div class="id-ti">タイムライン</div>
      <div class="id-pd">
        <% @works.reverse.last(20).each do |work|%>
          <%= link_to "#{work.sub_title.truncate(16)}", work %><br>
        <% end %>
      </div>
    </div>
  </div>
  <div class="id-inline">
    <div class="ranking">
    <div class="id-ti">ランキング</div>
      <% @ranks.each do |rank| %>
       <%= link_to "#{rank.sub_title}", rank %><br>
      <% end %>
    </div>
  </div>
</div>



<%= render 'footer' %>


