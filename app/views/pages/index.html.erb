<div class="sub-her">
  <div><%= link_to "キャンディィ|アニメ無料動画", root_path %></div>
  <div class="sub-her-dis">アニメの無料動画をYoutubeでまとめたサイトです。</div>
</div>
<div class="id-main-box">
  <div class="id-inline">
    <div class="we-index">
    <div class="id-ti">放映中アニメ</div>
    <div class="id-pd">
      <% doc = Nokogiri.HTML(open("http://tvanimedouga.blog93.fc2.com/")) %>
      <% doc.css('#menu1Block > div:nth-child(4) > div.menu1BlockBody > div > div > ul > li > a').each do |element| %>
      
        <% ani = element.inner_html %>
        
        <% @content = Content.find_by(title: ani) %>

          <% if !@content.blank? %>
          <% if ani == @content.title %>
            <%= link_to "#{ani}",  @content %><br>
          <% end %>
          <% end %>
        
      <% end %>
    </div>

    </div>
  </div>

  <div class="id-inline">
    <div class="timeline">
      <div class="id-ti">タイムライン</div>
      <div class="id-pd">
        <% @works.reverse.first(25).each do |work|%>
          <%= work.date.strftime("%-m月 %-d日") %>
          <%= link_to "#{work.sub_title.truncate(20)}", work %><br>
        <% end %>
      </div>
    </div>
  </div>
  <div class="id-inline">
    <div class="ranking">
    <div class="id-ti">ランキング</div>
    <% @i = 0%>
      <% @ranks.each do |rank| %>
       <%= @i += 1 %>
       <%= link_to "#{rank.sub_title.truncate(20)}", rank %><br>
      <% end %>
    </div>
  </div>
</div>



  <%= render 'pages/footer' %>


