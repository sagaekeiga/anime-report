    <div class="timeline">
    
    <div class="id-ti">PV<%= @rank.to_i %></div>
    
    <div class="id-pd">
      <%= @work.content %>
      <% @anime = Anime.find_by(title: @work.sub_title) %>
      
      <% @anime = Anime.find_by(date: @work.date, title: @work.sub_title) %>
      <% if !@anime.blank? %>
      <%= link_to "【Youtube】", @anime.youtube , { :target => "_blank"} if !@anime.youtube.blank? %>
