      <%= link_to "【GoGo】", @anime.gogo , { :target => "_blank"}if !@anime.gogo.blank? %>
      <%= link_to "【Nova】", @anime.nova, { :target => "_blank"} if !@anime.nova.blank? %>
      <%= link_to "【GoodA】", @anime.gooda , { :target => "_blank"}if !@anime.gooda.blank? %>
      <%= link_to "【Kiss】", @anime.kiss, { :target => "_blank"} if !@anime.kiss.blank? %>
